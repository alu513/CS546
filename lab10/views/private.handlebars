{{#if user}}

<h1>Your Details</h1>
<h2>{{user.firstName}} {{user.lastName}}</h2>
<main>
    <dl>
        <dt>id</dt>
        <dd>{{user._id}}</dd>
        <dt>Username</dt>
        <dd>{{user.username}}</dd>
        <dt>First Name</dt>
        <dd>{{user.firstName}}</dd>
        <dt>Last Name</dt>
        <dd>{{user.lastName}}</dd>
        <dt>Profession</dt>
        <dd>{{user.profession}}</dd>
        <dt>Bio</dt>
        <dd>{{user.bio}}</dd>
    </dl>

    <a href="/logout">Logout</a>

</main>

{{else}}
<p class="not-found">Sorry you are not logged in</p>
<a href="/">back to login page</a>
{{/if}}